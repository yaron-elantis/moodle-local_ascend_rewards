<h2>{{cleanup_heading}}</h2>
<div class="card">
  {{#cleanup_notice}}
    <div class="{{cleanup_notice_class}}">{{cleanup_notice}}</div>
  {{/cleanup_notice}}
  <form method="post">
    <input type="hidden" name="sesskey" value="{{sesskey}}">
    <p><strong>{{cleanup_orphaned_label}}:</strong> {{cleanup_orphaned_desc}}</p>
    <p><strong>{{cleanup_deleted_users_label}}:</strong> {{cleanup_deleted_users_desc}}</p>
    <p><strong>{{note_label}}:</strong> {{cleanup_note}}</p>
    <button type="submit" name="action" value="cleanup_orphaned" class="btn btn-primary">{{cleanup_orphaned_button}}</button>
    <button type="submit" name="action" value="cleanup_deleted_users" class="btn btn-secondary aa-admin-btn-spaced">{{cleanup_deleted_users_button}}</button>
  </form>
</div>
