}}<div class="aa-wrap">
  <div class="ascendrewards ascendrewards-admin">
    <h1>{{admintitle}}</h1>

    <div id="adminAscendCongrats" class="aa-congrats aa-hidden">
      <video id="adminAscendCongratsVideo" autoplay muted loop playsinline>
        <source src="{{reward_video_url}}" type="video/mp4">
      </video>
      <div>
        <div class="aa-congrats-title" id="adminAscendCongratsText">{{congrats_title}}</div>
        <div class="aa-muted">{{congrats_subtext}}</div>
      </div>
    </div>

    <nav class="nav-tabs aa-admin-tabs">
      {{#tabs}}
        <a href="{{url}}" class="nav-tab aa-admin-tab {{#active}}active{{/active}}">{{label}}</a>
      {{/tabs}}
    </nav>

    {{#post_message}}
      <div class="{{post_message_class}}">{{{post_message}}}</div>
    {{/post_message}}

    {{{tabcontent}}}
  </div>
</div>

